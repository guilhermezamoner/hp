extends ../layout

block content
  h1 #{title}
  form(method='POST', action='/pets/update/'+pet._id)
    #form-group
      label Nome:
      input.form-control(name='nome', type='text', value=pet.nome)
    #form-group
      label Descricao:
      textarea.form-control(name='descricao', value=pet.descricao)
    #form-control
      label Tipo:
      select.form-control(name='tipo', val=pet.tipo)
        each val in ['CACHORRO', 'GATO','OUTROS']
          option= val  
    br
    input.btn.btn-primary(type='submit',value='Submit')